# Global options block
{
    debug
    email millionmulugeta01@gmail.com
}

wam.mrbeas.net {
    # Enable TLS with specific protocols
    tls {
        protocols tls1.2 tls1.3
    }
    tls millionmulugeta01@gmail.com

    # Handle static assets first with proper MIME types
    @static {
        path /assets/* /output.css /vite.svg *.js *.css
    }
    handle @static {
        reverse_proxy dashboard:3000
        header_down Content-Type {http.reverse_proxy.content_type}
    }

    # Reverse proxy all other requests
    reverse_proxy dashboard:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
    }

    # Set security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Enable compression
    encode gzip zstd
}